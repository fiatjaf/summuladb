{
  "name": "summuladb",
  "version": "0.0.1",
  "description": "a SummaDB that runs in the browser.",
  "main": "index.js",
  "scripts": {
    "before": "rm -rf ${GOPATH}/pkg/*_js && gopherjs build --tags=levelupjs && mkdir -p dist",
    "prebuild": "npm run before",
    "prebuild-prod": "npm run before",
    "pretest": "npm run before",
    "build": "mkdir -p dist && browserify -vd summuladb.js -r levelup > dist/summuladb.js",
    "build-prod": "mkdir -p dist && browserify -v summuladb.js -r levelup | uglifyjs > dist/summuladb.min.js",
    "test": "node --require source-map-support/register test.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "levelup": "^1.3.5",
    "lua.vm.js": "0.0.1",
    "memdown": "^1.2.4",
    "pouchdb": "^6.1.2"
  },
  "devDependencies": {
    "blue-tape": "^1.0.0",
    "browserify": "^14.3.0",
    "browserify-incremental": "^3.1.1",
    "source-map-support": "^0.4.14",
    "tape": "^4.6.3"
  }
}
